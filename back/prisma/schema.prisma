generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  name       String
  collection Item[] @relation("UserItems")
}

model Item {
  id      String  @id @default(uuid())
  name    String
  img     String?
  sound   String?
  type    String  @default("band")
  owner   User?   @relation("UserItems", fields: [ownerId], references: [id])
  ownerId String?
}

model Merge {
  id     String @id @default(uuid())
  First  String
  Second String
  New    String
}
